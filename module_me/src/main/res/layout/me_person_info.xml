<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_94"
        android:layout_height="@dimen/dp_94"
        android:layout_marginTop="@dimen/dp_49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_59"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head">

        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/username"
                android:textColor="@color/text_color19_606972"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="0dp"
                android:paddingRight="@dimen/dp_22"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                tools:text="laopao" />
        </LinearLayout>
        <View style="@style/HorizontalStyle"/>

        <LinearLayout
            android:id="@+id/ll_nickname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/nick_name"
                android:textColor="@color/text_color19_606972"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/right_arrow"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="right|center_vertical"
                tools:text="laopao" />
        </LinearLayout>
        <View style="@style/HorizontalStyle"/>
        <LinearLayout
            android:id="@+id/ll_signature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/signature"
                android:textColor="@color/text_color19_606972"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/right_arrow"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="right|center_vertical"
                tools:text="测试一下" />
        </LinearLayout>
        <View style="@style/HorizontalStyle"/>
        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/email"
                android:textColor="@color/text_color19_606972"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_email"
                android:drawableRight="@drawable/right_arrow"
                android:drawablePadding="@dimen/dp_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                tools:text="128899239@qq.com" />
        </LinearLayout>
        <View style="@style/HorizontalStyle"/>
        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/mobile_phone"
                android:textColor="@color/text_color19_606972"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/right_arrow"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="right|center_vertical"
                tools:text="18001332817" />
        </LinearLayout>
        <View style="@style/HorizontalStyle"/>
        <LinearLayout
            android:id="@+id/ll_uid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/uid"
                android:textColor="@color/text_color19_606972"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_uid"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                tools:text="27893290" />
        </LinearLayout>
        <View style="@style/HorizontalStyle"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
