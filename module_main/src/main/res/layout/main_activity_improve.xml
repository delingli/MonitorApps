<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_37" />

    <android.support.constraint.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp_37" />

    <TextView
        android:id="@+id/tv_improve_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/improve_person_info"
        android:textColor="@color/text_color20_1D2023"
        android:textSize="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_94"
        android:layout_height="@dimen/dp_94"
        android:layout_marginTop="@dimen/dp_38"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_improve_desc"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_nickname_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nick_name"
        android:textColor="@color/text_color_9CA3A9"
        android:textSize="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/iv_head" />


    <EditText
        android:id="@+id/et_nock_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:maxLength="10"
        android:selectAllOnFocus="true"
        android:textColor="@color/text_color20_1D2023"
        android:textColorHint="@color/color_999999"
        android:textCursorDrawable="@drawable/cursor_drawable"
        app:layout_constraintEnd_toEndOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/tv_nickname_desc" />

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        android:text="@string/introduce_person_desc"
        android:textColor="@color/text_color_9CA3A9"
        android:textSize="@dimen/dp_12"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/et_nock_name" />

    <EditText
        android:id="@+id/et_person_introduce"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:maxLength="20"
        android:selectAllOnFocus="true"
        android:textColor="@color/text_color20_1D2023"
        android:textColorHint="@color/color_999999"
        android:textCursorDrawable="@drawable/cursor_drawable"
        app:layout_constraintEnd_toEndOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/tv_introduce" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_39"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/bg_login_bg"
        android:enabled="false"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        app:layout_constraintEnd_toEndOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/et_person_introduce" />

    <TextView
        android:id="@+id/tv_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:text="@string/jump"
        android:textColor="@color/text_color_9CA3A9"
        android:textSize="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="@+id/end_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/btn_next" />

</android.support.constraint.ConstraintLayout>
