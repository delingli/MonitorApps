<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/nest_course"
            android:textColor="@color/text_color_FF4A4A4A"
            android:textSize="@dimen/dp_18" />

        <ImageView
            android:id="@+id/iv_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_80"
            android:layout_toLeftOf="@+id/fl_sign"
            android:src="@drawable/record" />

        <include
            layout="@layout/main_sign_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <com.dc.commonlib.weiget.horizontalrecycle.DLHorizontalRecycleView
        android:id="@+id/dlHorizontalRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<FrameLayout
    android:id="@+id/fl_continer"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="0dp"/>
</LinearLayout>