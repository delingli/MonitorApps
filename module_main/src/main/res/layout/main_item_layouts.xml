<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8"
    tools:context=".TestActivity">

    <include
        layout="@layout/common_dl_videoplyer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_weishi_column"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vplayer">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            tools:src="@drawable/search" />

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/bg_color_3F454B"
            android:textSize="@dimen/dp_12"
            tools:text="@string/sure" />

        <TextView
            android:id="@+id/tv_focus_on"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_4_5"
            android:background="@drawable/bg_login_bg"
            android:drawableLeft="@drawable/add"
            android:drawablePadding="@dimen/dp_3"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_6"
            android:paddingRight="@dimen/dp_6"
            android:textColor="@color/white"
            tools:text="@string/focus_on" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/comments"

            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:paddingRight="@dimen/dp_22"
            android:textColor="@color/text_color19_606972"
            android:textSize="@dimen/dp_11"
            tools:text="0" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_margin"
            android:padding="@dimen/dp_4"
            android:src="@drawable/more" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>