<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_reset_password_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/reset_password"
        android:textColor="@color/text_color20_1D2023"
        android:textSize="@dimen/dp_24" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_6"
        android:layout_gravity="center_horizontal"
        android:paddingRight="@dimen/dp_6"
        app:tabBackground="@android:color/transparent"

        app:tabGravity="center"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="@dimen/dp_0"
        app:tabMode="fixed"

        app:tabRippleColor="@android:color/transparent"
        app:tabTextAppearance="@style/gorget_password_tablayouttextstyle"
        app:tabTextColor="@color/text_color4_666666" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
