<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F7F8F8">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/cl_top"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"

        app:layout_constraintRight_toRightOf="parent">

    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:src="@drawable/setting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        layout="@layout/main_sign_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_21"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_setting"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_21"
        android:text="laopao"
        android:textColor="@color/text_color20_1D2023"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@id/iv_setting"
        tools:text="laopao" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/bg_level_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_11"
        app:layout_constraintLeft_toRightOf="@+id/iv_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="二级会员" />

    <TextView
        android:id="@+id/tv_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/text_color19_606972"
        android:textSize="@dimen/dp_12"
        app:layout_constraintLeft_toRightOf="@+id/iv_head"

        app:layout_constraintTop_toBottomOf="@+id/tv_level"
        tools:text="这里是一句简短的签名" />

    <LinearLayout
        android:id="@+id/ll_top_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head">

        <LinearLayout
            android:id="@+id/ll_fans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color20_1D2023"
                android:textSize="@dimen/dp_14"
                tools:text="1000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fans"
                android:textColor="@color/text_color_9CA3A9"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <View
            style="@style/VerticalStyle"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/ll_focus_on"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_focus_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color20_1D2023"
                android:textSize="@dimen/dp_14"
                tools:text="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/focus_on"
                android:textColor="@color/text_color_9CA3A9"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>

        <View
            style="@style/VerticalStyle"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15" />

        <LinearLayout
            android:id="@+id/ll_integral"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color20_1D2023"
                android:textSize="@dimen/dp_14"
                tools:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/integral"
                android:textColor="@color/text_color_9CA3A9"
                android:textSize="@dimen/dp_12" />
        </LinearLayout>


    </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/cardview_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_balance"
        android:paddingBottom="@dimen/dp_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_11"
            android:text="@string/cao_balance"
            android:textColor="@color/text_color20_1D2023"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_11"
            android:text="0"
            android:textColor="@color/text_color20_1D2023"
            android:textSize="@dimen/dp_24" />

        <TextView
            android:id="@+id/tv_go_prepaid_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_13"
            android:background="@drawable/bg_corner_white_bg"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_2"
            android:text="@string/go_prepaid_phone"
            android:textColor="@color/text_color_854309"
            android:textSize="@dimen/dp_16" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/bg_corner_white_bg"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview_tab">

        <TextView
            android:id="@+id/tv_the_theme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/bg_them"
            android:gravity="center"
            android:text="@string/the_theme"
            android:textColor="@color/text_color19_606972"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/reply"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="@string/reply"
            android:textColor="@color/text_color19_606972"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/video"
            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="@string/video"
            android:textColor="@color/text_color19_606972"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/collection_me"

            android:drawablePadding="@dimen/dp_2"
            android:gravity="center"
            android:text="@string/collection"
            android:textColor="@color/text_color19_606972"
            android:textSize="@dimen/dp_11" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>