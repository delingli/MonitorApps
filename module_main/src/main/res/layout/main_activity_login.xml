<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/main_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_37" />

    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_37"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@null"
        android:gravity="center|left"
        android:hint="@string/login_hint_email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:cursorVisible="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:textCursorDrawable="@drawable/cursor_drawable"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/main_textview2" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_46"
        android:layout_marginEnd="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@null"
        android:gravity="center|left"
        android:cursorVisible="true"
        android:hint="@string/login_hint_password"
        android:imeActionLabel="@string/login_forget_password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/cursor_drawable"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <Button
        android:id="@+id/logins"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_39"
        android:layout_gravity="start"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_75"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@drawable/bg_login_bg"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />


    <TextView
        android:id="@+id/main_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/login_welcome"
        android:textColor="@color/text_color20_1D2023"
        android:textSize="@dimen/dp_24"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:text="@string/login_welcome_language"
        android:textColor="@color/text_color20_1D2023"
        android:textSize="@dimen/dp_24"

        app:layout_constraintLeft_toLeftOf="@+id/main_guideline"
        app:layout_constraintStart_toStartOf="@+id/main_guideline"
        app:layout_constraintTop_toBottomOf="@+id/main_textview" />

    <TextView
        android:id="@+id/tv_foget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_37"
        android:text="@string/login_forget_password"
        android:textColor="@color/text_color19_606972"
        android:textSize="@dimen/dp_14"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/tv_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/regist"
        android:textColor="@color/text_color19_606972"
        android:textSize="@dimen/dp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logins" />


    <View
        android:id="@+id/view_left_line"
        style="@style/HorizontalStyle"
        android:layout_marginLeft="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_81"
        android:background="@color/text_color8_a0a0a0"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_login_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_login_desc" />

    <TextView
        android:id="@+id/tv_login_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_81"
        android:layout_marginRight="@dimen/dp_18"
        android:gravity="center"
        android:text="@string/login_for_third_party"
        android:textColor="@color/text_color19_606972"
        android:textSize="@dimen/dp_12"
        app:layout_constraintLeft_toRightOf="@+id/view_left_line"
        app:layout_constraintRight_toLeftOf="@+id/view_right_line"
        app:layout_constraintTop_toBottomOf="@+id/tv_regist" />

    <View
        android:id="@+id/view_right_line"
        style="@style/HorizontalStyle"
        android:layout_marginTop="@dimen/dp_81"
        android:layout_marginRight="@dimen/dp_38"
        android:background="@color/text_color8_a0a0a0"
        app:layout_constraintBaseline_creator="@+id/tv_login_desc"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_login_desc"
        app:layout_constraintLeft_toRightOf="@+id/tv_login_desc"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageView
        android:id="@+id/iv_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_30"
        android:src="@drawable/qq"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_desc"
        app:layout_constraintVertical_bias="0.291" />

    <ImageView
        android:id="@+id/iv_wechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_18"
        android:src="@drawable/wechar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_desc"
        app:layout_constraintVertical_bias="0.291" />

</android.support.constraint.ConstraintLayout>