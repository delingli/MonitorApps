<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toors="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_83"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_11">


    <ImageView
        android:id="@+id/iv_left_img"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        toors:src="@drawable/default_hold" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="16dp"
        android:layout_marginRight="@dimen/common_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color5_333333"
        android:textSize="@dimen/dp_16"
        app:layout_constraintHorizontal_bias="1.0"

        app:layout_constraintLeft_toRightOf="@+id/iv_left_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        toors:text="还还是看到的是还是看到的是还是看到的是还是看到的是还是看到的是是看到的是" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        android:alpha="0.5"
        android:background="@drawable/bg_project_noworkbg"
        android:paddingLeft="@dimen/dp_6"
        android:paddingRight="@dimen/dp_6"

        android:textColor="@color/text_color_f54966"
        android:textSize="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="@+id/iv_left_img"
        app:layout_constraintLeft_toRightOf="@+id/iv_left_img"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        toors:text="再见" />
</android.support.constraint.ConstraintLayout>
