<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_25">

    <TextView
        android:id="@+id/tv_complate_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-01-20"
        android:textColor="@color/text_color4_666666"
        android:textSize="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/proj_guideline1"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <android.support.constraint.Guideline
        android:id="@+id/proj_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_51" />

    <android.support.constraint.Guideline
        android:id="@+id/proj_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp_130" />

    <FrameLayout
        android:id="@+id/fl_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/proj_guideline2"
        app:layout_constraintStart_toStartOf="@+id/proj_guideline2"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view_line_bg"
            android:layout_width="@dimen/dp_3"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/text_color_3476f9" />

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/delay"
            android:visibility="invisible" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_12"
        app:layout_constraintLeft_toRightOf="@+id/fl_center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="@dimen/dp_20">

        <TextView
            android:id="@+id/tv_phase_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_color_3476f9"
            android:textSize="@dimen/dp_15"
            android:visibility="gone"
            tools:text="前期审批" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableLeft="@drawable/choice"
            android:drawablePadding="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/text_color_3476f9"
            android:textSize="@dimen/dp_15"
            android:visibility="visible"
            tools:text="qqqqqqqaaccccccccccccccccccccccccccccccccccqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq " />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
