<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dp_12"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.constraint.Guideline
                android:id="@+id/proj_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/common_margin" />

            <LinearLayout
                android:id="@+id/ll_topbg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_134"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@drawable/surveyback"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/proj_guideline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/proj_guideline"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_land_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_25"
                        tools:text="0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:gravity="center"
                        android:text="@string/land_area"
                        android:textColor="@color/text_color_f0f5fe"
                        android:textSize="@dimen/dp_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_construction_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_25"
                        tools:text="0000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:gravity="center"
                        android:text="@string/construction_area"
                        android:textColor="@color/text_color_f0f5fe"
                        android:textSize="@dimen/dp_15" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_construction_unit_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/construction_unit"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/ll_topbg" />

            <TextView
                android:id="@+id/tv_construction_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_construction_unit_desc"
                tools:text="杭州智链达科技有限公司" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="@dimen/dp_2"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_15"
                android:text="@string/line"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_construction_unit"
                tools:text="达令" />

            <TextView
                android:text="@string/line"
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="@dimen/dp_2"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                tools:text="180013329378" />


            <TextView
                android:id="@+id/tv_general_contractor_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_36"
                android:text="@string/tv_general_contractor_desc"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_phone" />

            <TextView
                android:text="@string/line"
                android:id="@+id/tv_general_contractor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_general_contractor_desc"
                tools:text="杭州智链达科技有限公司" />

            <TextView
                android:text="@string/line"
                android:id="@+id/tv_general_contractor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="@dimen/dp_2"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_general_contractor"
                tools:text="达令" />

            <TextView
                android:text="@string/line"
                android:id="@+id/tv_general_contractor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="@dimen/dp_2"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_general_contractor_name"
                tools:text="180013329378" />

            <TextView
                android:id="@+id/tv_supervision_unit_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_36"
                android:text="@string/tv_supervision_unit_desc"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_general_contractor_phone" />


            <TextView
                android:text="@string/line"
                android:id="@+id/tv_supervision_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_supervision_unit_desc"
                tools:text="杭州智链达科技有限公司" />


            <TextView
                android:id="@+id/design_units_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_36"
                android:text="@string/design_units_desc"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_18"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/tv_supervision_unit" />


            <TextView
                android:text="@string/line"
                android:id="@+id/tv_design_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/text_color5_333333"
                android:textSize="@dimen/dp_15"
                app:layout_constraintStart_toStartOf="@id/proj_guideline"
                app:layout_constraintTop_toBottomOf="@+id/design_units_desc"
              />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
