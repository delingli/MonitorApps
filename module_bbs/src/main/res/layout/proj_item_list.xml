<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toors="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_11"
    android:layout_height="@dimen/dp_83">

    <ImageView
        android:id="@+id/iv_left_img"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        toors:src="@drawable/default_hold" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_21"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_color5_333333"
        android:textSize="@dimen/dp_16"

        app:layout_constraintLeft_toRightOf="@+id/iv_left_img"
        app:layout_constraintTop_toTopOf="parent"
        toors:text="还是看到的是" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:textColor="@color/color_ababbb"
        android:textSize="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="@+id/iv_left_img"
        app:layout_constraintLeft_toRightOf="@+id/iv_left_img"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        toors:text="再见" />
</android.support.constraint.ConstraintLayout>
