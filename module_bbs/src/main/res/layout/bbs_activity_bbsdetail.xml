<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:orientation="vertical">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false"
            app:statusBarScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
  >



                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_corner_bbs_detail_bg"
                    android:layout_height="match_parent">

                    <android.support.constraint.Guideline
                        android:id="@+id/guidez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_begin="@dimen/dp_15" />

                    <ImageView
                        android:id="@+id/iv_white_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="@dimen/dp_11"
                        android:padding="@dimen/dp_3"
                        android:src="@drawable/white_back"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guidez"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_fruitplate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"
                        android:layout_marginTop="@dimen/dp_11"
                        android:background="@drawable/bg_corner_left_white_bg"
                        android:drawableRight="@drawable/open_down"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:text="@string/fruitplate"
                        android:textColor="@color/text_color21_FFE50120"
                        android:textSize="@dimen/dp_12"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/iv_big_icon"
                        android:layout_width="@dimen/dp_58"
                        android:layout_height="@dimen/dp_58"
                        android:layout_marginTop="@dimen/dp_22"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_hold"
                        app:layout_constraintStart_toStartOf="@+id/guidez"
                        app:layout_constraintTop_toBottomOf="@+id/iv_white_back" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_20"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dp_18"
                        app:layout_constraintLeft_toRightOf="@+id/iv_big_icon"
                        app:layout_constraintTop_toBottomOf="@+id/iv_white_back"
                        tools:text="sdmnksdnkd" />

                    <TextView
                        android:id="@+id/tv_bbs_number_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:textColor="@color/white"

                        android:textSize="@dimen/dp_18"
                        app:layout_constraintStart_toEndOf="@+id/iv_big_icon"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name"
                        tools:text="主题2.0万帖子2.3万" />

                    <com.dc.commonlib.weiget.FocusOnTextView
                        android:id="@+id/tv_focus_ons"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_22"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/common_margin"
                        android:background="@drawable/bg_login_bg"
                        android:drawableLeft="@drawable/add"
                        android:drawablePadding="@dimen/dp_3"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_bbs_number_posts"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_fruitplate"
                        tools:text="@string/focus_on" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_12"
                        android:background="@drawable/bg_shape_top_bg"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_big_icon">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/moderators"
                            android:textColor="@color/text_color_FF1D2023"
                            android:textSize="@dimen/dp_16" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycle_moderators"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:orientation="horizontal" />
                    </LinearLayout>
                </android.support.constraint.ConstraintLayout>




                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:visibility="visible"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_left_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/white_back" />

                        <ImageView
                            android:id="@+id/iv_bbs_head"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_hold" />

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:textColor="@color/white"

                            android:textSize="@dimen/dp_16"
                            tools:text="你的" />


                    </LinearLayout>


                </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="?attr/colorPrimary"
            app:tabIndicatorColor="@color/text_color21_FFE50120"
            app:tabIndicatorHeight="@dimen/dp_2"
            app:tabSelectedTextColor="@color/text_color21_FFE50120"
            app:tabTextColor="@color/text_color_FF1D2023" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</android.support.design.widget.CoordinatorLayout>
