<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_tips_net"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="您正在使用移动网络，继续观看会消耗流量"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/tv_continue_play"
            android:layout_width="104dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="继续观看"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_common_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tips_error"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_error_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="播放监控视频失败，请检查网络"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="104dp"
            android:layout_height="33dp"
            android:gravity="center"
            android:text="重新刷新"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_common_bg"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_connect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:text="正在连接中"
        android:layout_marginBottom="20dp"
        />
</RelativeLayout>